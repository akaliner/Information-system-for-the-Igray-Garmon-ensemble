@model _1.Models.EditUserViewModel

@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>

                <div class="card-body bg-light">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label for="Name" class="form-label">Имя</label>
                            <input type="text" asp-for="Name" class="form-control" required autofocus placeholder="Имя..." />
                        </div>

                        <div class="mb-3">
                            <label for="Surname" class="form-label">Фамилия</label>
                            <input type="text" asp-for="Surname" class="form-control" required placeholder="Фамилия..." />
                        </div>

                        <div class="mb-3">
                            <label for="Middlename" class="form-label">Отчество</label>
                            <input type="text" asp-for="Middlename" class="form-control" required placeholder="Отчество..." />
                        </div>

                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Телефон</label>
                            <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="+7 (XXX) XXX XX XX" />
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">E-mail</label>
                            <input type="email" asp-for="Email" class="form-control" required placeholder="example@example.com" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-danger me-2 px-4">Сохранить</button>
                            <a href="/User/Index" class="btn btn-outline-secondary px-4">Отменить</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
