@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('#auditionForm').on('submit', function (e) {
                e.preventDefault();

                const form = $(this);
                const data = form.serialize();
                const messageDiv = $('#formMessage');

                $.post(form.attr('action'), data)
                    .done(function (response) {
                        form.trigger('reset');
                        messageDiv.removeClass('d-none alert-danger').addClass('alert-success').text('Заявка успешно отправлена!');
                    })
                    .fail(function () {
                        messageDiv.removeClass('d-none alert-success').addClass('alert-danger').text('Произошла ошибка при отправке. Пожалуйста, попробуйте позже.');
                    });
            });
        });
    </script>
    }
