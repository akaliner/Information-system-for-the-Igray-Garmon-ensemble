@model _1.Models.ScheduleViewModel

@{
    ViewData["Title"] = "Редактировать событие";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="shadow-lg border-0 rounded-4">
                <div class="bg-danger text-white rounded-top-4 p-3">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>

                <div class="bg-light p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="EventId" />

                        <div class="mb-3">
                            <label asp-for="EventName" class="form-label">Название события</label>
                            <input type="text" class="form-control" asp-for="EventName" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label">Начало</label>
                            <input type="datetime-local" class="form-control" asp-for="StartTime" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label">Окончание</label>
                            <input type="datetime-local" class="form-control" asp-for="EndTime" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Место</label>
                            <input type="text" class="form-control" asp-for="Location" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdditionalInfo" class="form-label">Дополнительная информация</label>
                            <textarea class="form-control" asp-for="AdditionalInfo"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Роли</label><br />
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles as List<_1.Models.Role>)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="Role_@role.Id" name="RoleIds" value="@role.Id"
                                        @(Model.RoleIds.Contains(role.Id) ? "checked" : "") />
                                        <label class="form-check-label" for="Role_@role.Id">@role.Name</label>
                                    </div>
                                }
                            }
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-danger me-2 px-4">Сохранить изменения</button>
                            <a href="@Url.Action("Index", "Schedule")" class="btn btn-outline-secondary px-4">Отмена</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
